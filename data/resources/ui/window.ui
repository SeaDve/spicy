<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_Open Circuit</attribute>
        <attribute name="action">win.open-circuit</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Save Circuit</attribute>
        <attribute name="action">win.save-circuit</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_About Spicy</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
  <template class="SpicyWindow" parent="AdwApplicationWindow">
    <child>
      <object class="AdwToastOverlay" id="toast_overlay">
        <child>
          <object class="AdwToolbarView">
            <property name="top-bar-style">raised</property>
            <child type="top">
              <object class="AdwHeaderBar">
                <property name="title-widget">
                  <object class="GtkBox">
                    <child>
                      <object class="GtkLabel" id="circuit_modified_status">
                        <property name="visible">False</property>
                        <property name="margin-end">6</property>
                        <property name="label">â€¢</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="circuit_title_label">
                        <style>
                          <class name="heading"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </property>
                <child>
                  <object class="GtkButton" id="run_button">
                    <property name="tooltip-text">Run</property>
                    <property name="icon-name">media-playback-start-symbolic</property>
                    <property name="action-name">win.run-simulator</property>
                  </object>
                </child>
                <child type="end">
                  <object class="GtkMenuButton">
                    <property name="icon-name">open-menu-symbolic</property>
                    <property name="menu-model">primary_menu</property>
                    <property name="primary">True</property>
                    <property name="tooltip-text" translatable="yes">Main Menu</property>
                  </object>
                </child>
              </object>
            </child>
            <property name="content">
              <object class="GtkBox">
                <child>
                  <object class="GtkScrolledWindow">
                    <property name="hexpand">True</property>
                    <child>
                      <object class="GtkSourceView" id="circuit_view">
                        <property name="top-margin">12</property>
                        <property name="bottom-margin">12</property>
                        <property name="left-margin">12</property>
                        <property name="right-margin">12</property>
                        <property name="monospace">True</property>
                        <property name="input-hints">no-emoji</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkSeparator"/>
                </child>
                <child>
                  <object class="GtkScrolledWindow">
                    <property name="hexpand">True</property>
                    <child>
                      <object class="GtkTextView" id="output_view">
                        <property name="top-margin">12</property>
                        <property name="bottom-margin">12</property>
                        <property name="left-margin">12</property>
                        <property name="right-margin">12</property>
                        <property name="monospace">True</property>
                        <property name="editable">False</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
